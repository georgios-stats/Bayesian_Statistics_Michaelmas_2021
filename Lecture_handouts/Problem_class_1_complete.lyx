\begin_inset Formula 
\[
\begin{cases}
y|\overset{=\theta}{\overbrace{\phi,\lambda}}\sim F(y|\overset{=\theta}{\overbrace{\phi,\lambda}}) & ,\:\text{the statistical model}\\
(\underset{=\theta}{\underbrace{\phi,\lambda}})\sim\Pi(\underset{=\theta}{\underbrace{\phi,\lambda}}) & ,\,\text{the prior model}
\end{cases}
\]

\end_inset

The joint posterior of 
\begin_inset Formula $\theta$
\end_inset

 given 
\begin_inset Formula $y$
\end_inset

 is 
\begin_inset Formula $\text{d}\Pi(\theta|y)=\text{d}\Pi(\lambda|y,\phi)\text{d}\Pi(\phi|y)$
\end_inset

 is with PDF/PMF 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\pi(\overset{=\theta}{\overbrace{\phi,\lambda}}|y) & =\frac{f(y|\overset{=\theta}{\overbrace{\phi,\lambda}})\pi(\overset{=\theta}{\overbrace{\phi,\lambda}})}{f(y)}=\underset{=\pi(\lambda|y,\phi)}{\underbrace{\frac{f(y|\phi,\lambda)\pi(\lambda|\phi)}{f(y|\phi)}}}\underset{=\pi(\phi|y)}{\underbrace{\frac{f(y|\phi)\pi(\phi)}{f(y)}}}=\pi(\lambda|y,\phi)\pi(\phi|y)
\end{align*}

\end_inset

The (marginal) likelihood 
\begin_inset Formula $f(y|\phi)$
\end_inset

 of 
\begin_inset Formula $y$
\end_inset

 given 
\begin_inset Formula $\phi$
\end_inset

 is 
\begin_inset Formula 
\begin{align*}
f(y|\phi) & =\underset{=\text{E}_{\Pi(\lambda|\phi)}(f(y|\phi,\lambda)|\phi)}{\underbrace{\int_{\Lambda}f(y|\overset{=\theta}{\overbrace{\phi,\lambda}})\text{d}\Pi(\lambda|\phi)}}=\begin{cases}
\int_{\Lambda}f(y|\phi,\lambda)\pi(\lambda|\phi)\text{d}\lambda & ,\text{if}\,\lambda\,\text{cont}\\
\,\\
\sum_{\forall\lambda\in\Lambda}f(y|\phi,\lambda)\pi(\lambda|\phi) & ,\text{if}\,\lambda\,\text{discr}
\end{cases}
\end{align*}

\end_inset


\begin_inset Note Note
