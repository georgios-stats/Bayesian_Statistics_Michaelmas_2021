0 & =\left.\frac{\text{d}}{\text{d}\delta}\text{E}_{Q}\left(\ell(x,\delta;\varpi)|y\right)\right|_{\delta=\hat{\delta}}=\left.\frac{\text{d}}{\text{d}\delta}\int\ell(x,\delta;\varpi)\text{d}Q(x|y)\right|_{\delta=\hat{\delta}}\implies\hat{\delta}=x_{\varpi}\\
 & =(1-\varpi)\Pr_{Q}\left(\{x\le\hat{\delta}\}|y\right)-\varpi\Pr_{Q}\left(\{x\le\hat{\delta}\}^{\complement}|y\right)\implies\hat{\delta}=x_{\varpi}
\end{align*}

\end_inset


\end_layout

\begin_deeper
\begin_layout Enumerate
The decision space is 
\begin_inset Formula $\mathcal{D}=\left\{ C_{a}=[L,U]\,:\,\Pr_{Q}(x\in C_{a}|y)=1-a\right\} $
\end_inset

.
 Therefore, to find the Bayes rule (or Bayes estimate) of 
\begin_inset Formula $C_{a}=[L,U]$
\end_inset

 I need to minimize the expected posterior loss 
\begin_inset Formula $\text{E}_{Q}\left(\ell(x,C_{a};\varpi_{L},\varpi_{U})|y\right)$
\end_inset

 with respect to 
\begin_inset Formula $C_{a}$
\end_inset

 or equivalently 
\begin_inset Formula $L$
\end_inset

, 
\begin_inset Formula $U$
\end_inset

, so
\begin_inset Formula 
\begin{align*}
0 & =\left.\frac{\text{d}}{\text{d}L}\text{E}_{Q}\left(\ell(x,C_{a};\varpi_{L},\varpi_{U})|y\right)\right|_{C_{a}=[\hat{L},\hat{U}]}=\left.\text{E}_{Q}\left(\ell(x,L;\varpi_{L})|y\right)\right|_{L=\hat{L}}\implies\hat{L}=x_{\varpi_{L}}\\
0 & =\left.\frac{\text{d}}{\text{d}U}\text{E}_{Q}\left(\ell(x,C_{a};\varpi_{L},\varpi_{U})|y\right)\right|_{C_{a}=[\hat{L},\hat{U}]}=\left.\text{E}_{Q}\left(\ell(x,U;\varpi_{U})|y\right)\right|_{U=\hat{U}}\implies\hat{U}=x_{\varpi_{U}}
\end{align*}

\end_inset

 So 
\begin_inset Formula $x\in[x_{\varpi_{L}},x_{\varpi_{U}}]$
\end_inset

 where 
\begin_inset Formula $\varpi_{U}+\varpi_{L}=1-a$
\end_inset

.
 It is the minimum because 
\begin_inset Formula 
\[
\left.\frac{\text{d}^{2}}{\text{d}U^{2}}\text{E}_{Q}\left(\ell(x,C_{a};\varpi_{L},\varpi_{U})|y\right)\right|_{C_{a}=[\hat{L},\hat{U}]}=q(\hat{U}|y)>0
\]

\end_inset


\begin_inset Formula 
\[
\left.\frac{\text{d}^{2}}{\text{d}L^{2}}\text{E}_{Q}\left(\ell(x,C_{a};\varpi_{L},\varpi_{U})|y\right)\right|_{C_{a}=[\hat{L},\hat{U}]}=q(\hat{L}|y)>0
\]

\end_inset


\begin_inset Formula 
\[
\left.\frac{\text{d}}{\text{d}U}\frac{\text{d}}{\text{d}L}\text{E}_{Q}\left(\ell(x,C_{a};\varpi_{L},\varpi_{U})|y\right)\right|_{C_{a}=[\hat{L},\hat{U}]}=0
\]

\end_inset

and hence the determinant of the Hessian in positive.
\end_layout

